@model JobApplication.Areas.Identity.Data.ViewModels.CandidateViewModel

@{
    ViewData["Title"] = "ShowCandidateInformation";
}

    <div class="tab">

        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate1')">Podstawowe Informacje</button>
        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate2')">Preferencje zawodowe</button>
        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate3')">Edukacja</button>
        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate4')">Doświadczenia</button>
        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate5')">Umiejętności</button>
        <button class="tablinks" onclick="OpenNavbarItem(event, 'Candidate6')">Nagrody i Sukcesy</button>
        <a class="tablinks" asp-area="Employer" asp-controller="EmployerPanel" asp-action="Index" asp-route-name="OfertyAplikacyjne">Cofnij</a>
    </div>

    <div class="userPanelPadding">
        <div id="Candidate1" class="tabcontent">

            <main role="main" class="pb-3">
                <div class="login-Containter">


                    <img class="img-fluid rounded  backgroundimage-css" src="~/images/@Model.appUserDto.BackgroundImage" />

                    <div class="container-padding">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">Kandydat</div>
                                <input id="CompanyName" class="form-control form-input" disabled asp-for="appUserDto.CompanyName" />
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">EMAIL</div>
                                <input disabled id="Email" class="form-control form-input" asp-for="appUserDto.Email" />
                            </div>
                        </div>
                    </div>

                    <div class="container-padding">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">TELEFON</div>
                                <input disabled id="PhoneNumber" class="form-control form-input" asp-for="appUserDto.PhoneNumber" />

                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">DATA URODZENIA</div>
                                <input disabled id="FoundingDate" class="form-control form-input" asp-for="appUserDto.FoundingDate" />

                            </div>
                        </div>
                    </div>

                    <div class="container-padding">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">NAGŁÓWEK</div>
                                <input disabled id="Headline" class="form-control form-input" asp-for="appUserDto.Headline" />

                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="text-bottom-left-padding bolded">PŁEĆ</div>
                                <input disabled class="form-control form-input" asp-for="AppUserEmployeeExtension.Gender" />

                            </div>
                        </div>
                    </div>



                    <div class="container-padding">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-bottom-left-padding bolded">OPIS</div>
                                <textarea disabled asp-for="appUserDto.ShortDescription" class="form-control form-input" placeholder="Wprowadz krótki opis"> </textarea>
                                <span asp-validation-for="appUserDto.ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="form-group border rounded">
                        @if (Model.AppUserEmployeeExtension.CVFile == null)
                        {
                            <b> Brak pliku CV</b>
                        }
                        else
                        {
                            <a asp-action="GetCv" class="btn btn-success form-control form-input" asp-route-id="@Model.AppUserEmployeeExtension.CVFile">Pobierz Plik Cv</a>
                        }
                    </div>

                    <br />
                    <div class="container-padding">
                        <div class="row">
                            <div class="col-12">

                                <div class="text-bottom-left-padding bolded">List Motywacyjny</div>
                                <textarea disabled asp-for="appUserDto.Descrption" id="Descrption" class="form-control form-input" placeholder="Wprowadz krótki opis"> </textarea>


                            </div>
                        </div>
                    </div>
                    <br />


                    <br />




                    <div class="container-padding">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-bottom-left-padding bolded">LOKALIZACJA I MAPA</div>
                                <div class="text-bottom-left-padding bolded">Adres</div>
                                <input asp-for="appUserDto.Address" disabled id="VideoUrl" class="form-control form-input" />
                                <br />
                                <div class="row">
                                    <div class="col-12">
                                        <div id="map" class="map-view"></div>
                                        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDU5JFGguFmEvu3-KTiIM0pyaSo01aJx9s&callback=initMap&libraries=&v=weekly"
                                                defer></script>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="container-padding">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-bottom-left-padding bolded">ADRES PLIKU WIDEO</div>
                                <div class="row">
                                    <div class="col-12">
                                        <input asp-for="appUserDto.VideoUrl" disabled id="VideoUrl" class="form-control form-input" placeholder="Nie wybrano" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                    @*<div class="container-padding">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-bottom-left-padding bolded">GALERIA</div>
                                <div class="row">

                                </div>
                            </div>
                        </div>
                    </div>*@
                    <br />
                    <div class="container-padding">
                        <div class="row">
                            <div class="col-12">
                                <div class="text-bottom-left-padding bolded">FIRMOWY PROFIL SPOŁECZNOŚCIOWY</div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="text-bottom-left-padding bolded">FACEBOOK</div>
                                        <input disabled class="form-control form-input" asp-for="appUserDto.FacebookProfile" placeholder="Wprowadz profil facebooka" />
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="text-bottom-left-padding bolded">TWITTER</div>
                                        <input disabled class="form-control form-input" asp-for="appUserDto.TwitterProfile" placeholder="Wprowadz profil twittera" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="text-bottom-left-padding bolded">YOUTUBE</div>
                                        <input disabled class="form-control form-input" asp-for="appUserDto.YoutubeProfile" placeholder="Wprowadz profil youtube" />
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="text-bottom-left-padding bolded">VIMEO</div>
                                        <input disabled class="form-control form-input" asp-for="appUserDto.VimeoProfile" placeholder="Wprowadz profil vimeo" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="text-bottom-left-padding bolded">LINKEDIN</div>
                                        <input disabled class="form-control form-input" asp-for="appUserDto.LinkedinProfile" placeholder="Wprowadz profil linkedin" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

        </div>


        <div id="Candidate2" class="tabcontent" style=" display:none">
            <main role="main" class="pb-3">
                <div class="container-padding">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-bottom-left-padding bolded">PREFERENCJE ZAWODOWE</h2>
                            <hr />

                            <div class="row">
                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">KATEGORIE</div>
                                    <input id="Categories" asp-for="appUserDto.Categories" class="form-control form-input" disabled />
                                </div>


                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">TYPY*</div>
                                    <input disabled class="form-control form-input" asp-for="AppUserEmployeeExtension.TypePreferes" />
                                </div>


                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">POZIOMY</div>
                                    <input disabled class="form-control form-input" asp-for="AppUserEmployeeExtension.Levels" />
                                </div>
                            </div>
                            <br />

                            <div class="row">
                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">LOKALIZACJA*</div>
                                    <input class="form-control form-input" disabled asp-for="AppUserEmployeeExtension.Localization" />
                                </div>


                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">JĘZYKI </div>
                                    <input class="form-control form-input" disabled asp-for="AppUserEmployeeExtension.Languages" />
                                </div>


                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">WYNAGRODZENIE OD</div>
                                    <input class="form-control form-input" disabled asp-for="AppUserEmployeeExtension.PaymentMinProfile" />
                                </div>

                            </div>
                            <br />
                            <div class="row">
                                <div class="col-4">
                                    <div class="text-bottom-left-padding bolded">DOŚWIADCZENIA</div>
                                    <input class="form-control form-input" disabled asp-for="AppUserEmployeeExtension.ExperiencesProfile" />
                                </div>


                                <div class="col-8">
                                    <div class="text-bottom-left-padding bolded">UMIEJĘTNOŚCI </div>
                                    <input class="form-control form-input" disabled asp-for="AppUserEmployeeExtension.SkillsProfile" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <div id="Candidate3" class="tabcontent" style=" display:none">
            <main role="main" class="pb-3">
                <div class="container-padding">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="text-bottom-left-padding bolded">EDUKACJA</h1>
                            <hr />
                            <br />
                            @if (Model.EducationEmployee.Count() > 0)
                            {

                                @foreach (var item in Model.EducationEmployee)
                                {
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">TYTUŁ</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Degree" />
                                            </div>
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">NAZWA SZKOŁY</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.SchoolName" />
                                            </div>
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">DATA ROZPOCZĘCIA - ZAKOŃCZENIA</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.DateStartEnd" />
                                            </div>

                                        </div>
                                        <br />


                                        <h5 class="text-bottom-left-padding bolded">OPIS</h5>
                                        <textarea disabled class="form-control form-input" asp-for="@item.Description"></textarea>
                                        <br />
                                        <hr />
                                    </div>
                                }

                            }
                            else
                            {
                                <b>Brak</b>
                            }
                        </div>
                    </div>
                </div>
            </main>
        </div>

