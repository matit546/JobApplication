            <main role="main" class="pb-3">
                <div class="container-padding">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="text-bottom-left-padding bolded">DOŚWIADCZENIA</h1>
                            <hr />
                            <br />
                            @if (Model.ExperiencesEmployee.Count() > 0)
                            {

                                @foreach (var item in Model.ExperiencesEmployee)
                                {
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">TYTUŁ</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Degree" />
                                            </div>
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">NAZWA FIRMY</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.CompanyName" />
                                            </div>
                                            <div class="col-4">
                                                <h5 class="text-bottom-left-padding bolded">DATA ROZPOCZĘCIA - ZAKOŃCZENIA</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.DateStartEnd" />
                                            </div>

                                        </div>
                                        <br />


                                        <h5 class="text-bottom-left-padding bolded">OPIS</h5>
                                        <textarea disabled class="form-control form-input" asp-for="@item.Description"></textarea>
                                        <br />
                                        <hr />
                                    </div>
                                }

                            }
                            else
                            {
                                <b>Brak</b>
                            }
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <div id="Candidate5" class="tabcontent" style=" display:none">
            <main role="main" class="pb-3">
                <div class="container-padding">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="text-bottom-left-padding bolded">UMIEJĘTNOŚCI</h1>
                            <hr />
                            <br />
                            @if (Model.SkillsEmployee.Count() > 0)
                            {

                                @foreach (var item in Model.SkillsEmployee)
                                {
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <h5 class="text-bottom-left-padding bolded">TYTUŁ</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Degree" />
                                            </div>
                                            <div class="col-6">
                                                <h5 class="text-bottom-left-padding bolded">WARTOŚĆ PROCENTOWA</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Percentage" />
                                            </div>

                                        </div>
                                    </div>
                                    <br />
                                    <hr />
                                }

                            }
                            else
                            {
                                <b>Brak</b>
                            }
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <div id="Candidate6" class="tabcontent" style=" display:none">
            <main role="main" class="pb-3">
                <div class="container-padding">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="text-bottom-left-padding bolded">NAGRODY I SUKCESY</h1>
                            <hr />
                            <br />
                            @if (Model.AwardsEmployee.Count() > 0)
                            {

                                @foreach (var item in Model.AwardsEmployee)
                                {
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <h5 class="text-bottom-left-padding bolded">TYTUŁ</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Award" />
                                            </div>
                                            <div class="col-6">
                                                <h5 class="text-bottom-left-padding bolded">ROK</h5>
                                                <input disabled class="form-control form-input" asp-for="@item.Year" />
                                            </div>
                                        </div>
                                        <br />

                                        <h5 class="text-bottom-left-padding bolded">OPIS</h5>
                                        <textarea disabled class="form-control form-input" asp-for="@item.Description"></textarea>

                                    </div>
                                    <br />
                                    <hr />
                                }

                            }
                            else
                            {
                                <b>Brak</b>
                            }
                        </div>
                    </div>
                </div>
            </main>
        </div>




    </div>
@section Scripts {

  <script>
      $('input').each(function () {
          $(this).css("background-color", "white");
      });

      $('textarea').each(function () {
          $(this).css("background-color", "white");
      });

      var map;  //google maps
      function initMap() {
          map = new google.maps.Map(document.getElementById("map"), {
              center: { lat: -34.397, lng: 150.644 },
              zoom: 8
          });
      }
  </script>
        }
