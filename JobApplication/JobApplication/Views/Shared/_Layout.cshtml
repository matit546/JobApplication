<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Workinthewest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow nav-background" >
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/workinthewest-drugie-2-1.png" /></a>
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">STRONA GŁÓWNA</a>
                        </li>

                        <li class="nav-item dropdown">

                            @if (User.IsInRole(SD.CandidateRole) && User.Identity.IsAuthenticated)
                            {
                                <partial name="_CandidateLayoutPartial" />
                            }
                            else if (User.IsInRole(SD.EmployerRole))
                            {
                                <partial name="_EmployerLayoutPartial" />
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="Candidate" asp-controller="Home">STREFA PRACOWNIKA</a>
                            }
                        </li>

                        <li class="nav-item dropdown">
                            @if (User.IsInRole(SD.CandidateRole) && User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    OFERTY PRACY
                                </a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="" asp-action="">PROPONOWANE OFERTY PRACY</a>
                                </div>
                            }
                            else if (User.IsInRole(SD.EmployerRole))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">OFERTY PRACY</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="Employer" asp-controller="Home">STREFA PRACODAWCY</a>
                            }
                        </li>

                        <li class="nav-item dropdown">
                            @if (User.IsInRole(SD.CandidateRole) && User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">PRACODAWCY</a>
                            }
                            else if (User.IsInRole(SD.EmployerRole))
                            {
                                <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    KANDYDACI
                                </a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="" asp-action="">PROPONOWANI KANDYDACI</a>
                                </div>

                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">OFERTY PRACY</a>
                            }
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">ZAKWATEROWANIE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @*@if (Context.Request.Path == "/Identity/Account/Register" || Context.Request.Path == "/Identity/Account/Login")
    {

    }*@
        <partial name="_CookieConsentPartial" />
            @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - JobApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
